<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbe7e6"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:id="@+id/Answer_text"
        >
        <TextView
            style="@style/TextViewStyle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:layout_gravity="left"
            android:layout_marginLeft="40dp"
            />
        <EditText
            style="@style/EditTextStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Answertext"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/button_done_back"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity = "center"
       android:layout_below="@+id/Answer_text"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/DoneAnswer"
            android:text="Done"
            style="@style/TextButtonStyle1"
            android:layout_marginRight="25dp"
            android:background="@color/color_text_green"
            />
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/TextButtonStyle1"
            android:background="@color/color_text_black"
            android:id="@+id/Back"
            android:text="Back"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_done_back"
        android:id="@+id/listViewAnswer">
        <ListView
            android:layout_below="@+id/testtest"
            android:id="@+id/listViewAnswerData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp" />
    </LinearLayout>


</RelativeLayout>