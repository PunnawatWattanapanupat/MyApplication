<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context="com.example.arashi.myapplication.Activity.ClassActivity"
    android:background="#FFFFFF">

    <Button

        android:text="Add Class"
        android:id="@+id/btn_add_class"
        style="@style/TextButtonStyle1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@color/color_text_green"
        />



    <ListView
        android:id="@+id/listView1"
        android:layout_below="@+id/btn_add_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </ListView>


</RelativeLayout>
